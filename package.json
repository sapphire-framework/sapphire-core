{
  "name": "sapphire-core",
  "description": "Core Package for Sapphire Framework",
  "license": "MIT",
  "private": true,
  "engines": {
    "node": ">= 6.0.0"
  },
  "scripts": {
    "test": "jest",
    "lint": "eslint .",
    "test-ci": "jest --coverage && cat ./coverage/lcov.info | coveralls"
  },
  "devDependencies": {
    "lerna": "^3.0.0-alpha.1",
    "coveralls": "^3.0.0",
    "eslint": "^4.14.0",
    "jest": "^22.0.4"
  },
  "jest": {
    "modulePaths": [
      "<rootDir>/packages/"
    ],
    "testMatch": [
      "**/test/*.js"
    ],
    "collectCoverageFrom": [
      "packages/*/lib/**/*.js"
    ],
    "testEnvironment": "node"
  }
}
